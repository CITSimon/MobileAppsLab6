<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.cit.android.flightsearch">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ie.cit.android.flightsearch.FlightViewActivity"
            android:label="@string/app_name"
            android:parentActivityName="ie.cit.android.flightsearch.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.cit.android.flightsearch.MainActivity" />
        </activity>


    </application>

</manifest>
